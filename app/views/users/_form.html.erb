<%= render 'shared/errors', object: @user %>

<div class="form-content text-light">
    <%= form_with(model: @user, local: true)  do |form| %>

        <div class="form-group row">
            <label class="col-sm-2 col-form-label col-form-label-lg" >
                <%= form.label :username %>
            </label>
            <div class="col-sm-10 " >
                <%= form.text_field :username, class:"form-control form-control-md mt-2", placeholder: "Enter the username" %>
            </div>
        </div>

        <div class="form-group row">
            <label class="col-sm-2 col-form-label col-form-label-lg" >
                <%= form.label :email %>
            </label>
            <div class="col-sm-10" >
                <%= form.email_field :email, class:"form-control form-control-md mt-2 mb-2", placeholder: "Enter the email" %>
            </div>
        </div>

        <div class="form-group row">
            <label class="col-sm-2 col-form-label col-form-label-lg" >
                <%= form.label :password %>
            </label>
            <div class="col-sm-10" >
                <%= form.password_field :password, class:"form-control form-control-md mt-2 mb-2", placeholder: "Enter the password"%>
            </div>
        </div>

        <div class="mt-5" id="center">
            <%= form.submit "Sign up", class:"submit-btn btn btn-warning " %>
            <%= link_to "Go back", articles_path , class:"btn btn-dark ", style: "float: right;" %>
        </div>
    <% end %>
</div>