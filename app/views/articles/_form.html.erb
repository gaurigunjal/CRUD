<%= render 'shared/errors' %>

<div class="form-content text-light">
    <%= form_with(model: @article, local: true)  do |form| %>

        <div class="form-group row">
            <label class="col-sm-2 col-form-label col-form-label-lg" >
                <%= form.label :title %>
            </label>
            <div class="col-sm-10 " >
                <%= form.text_field :title, class:"form-control form-control-md mt-2" %>
            </div>
        </div>

        <div class="form-group row">
            <label class="col-sm-2 col-form-label col-form-label-lg" >
                <%= form.label :Description %>
            </label>
            <div class="col-sm-10" >
                <%= form.text_area :desc, class:"form-control form-control-md mt-2 mb-2" %>
            </div>
        </div>

        <div class="mt-5" id="center">
            <%= form.submit class:"submit-btn btn btn-warning " %>
            <%= link_to "Go back", articles_path , class:"btn btn-dark ", style: "float: right;" %>
        </div>
    <% end %>
</div>